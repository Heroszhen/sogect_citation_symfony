<article class="onecitation onecomment" data-id="{{ comment.id }}">
    <div class="author-time">
        <span class="author">{{ comment.user.name }}</span>
        <span class="time">{{ comment.created|date("d/m/Y h:i:s") }}</span>
    </div>
    <div class="message">{{ comment.message|raw }}</div>
    <div class="footer">
        <div class="responses"></div>
        <div class="wrap-actions" data-id="{{ comment.id }}">
            {% if app.user is not null and app.user.id == comment.user.id %}
                <div class="action edit me-3" >
                    <i class="bi bi-pencil" onclick="editComment(event, {{ comment.id }})"></i>
                </div>
                <div class="action delete">
                    <i class="bi bi-trash3-fill" onclick="deleteComment(event, {{ comment.id }})"></i>
                </div>
            {% endif %}
        </div>
    </div>
</article>